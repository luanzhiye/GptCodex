<Window x:Class="WheelSpeedWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:WheelSpeedWPF.Controls"
        mc:Ignorable="d"
        Title="Wheel Speed"
        Width="960"
        Height="600"
        MinWidth="800"
        MinHeight="520"
        Background="#FFF3F4F7">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_系统">
                <MenuItem x:Name="RunStopMenuItem" Header="运行" Click="RunStopButton_OnClick" />
                <Separator />
                <MenuItem Header="退出" Click="ExitMenuItem_OnClick" />
            </MenuItem>
            <MenuItem Header="_帮助">
                <MenuItem Header="关于" Click="AboutMenuItem_OnClick" />
            </MenuItem>
        </Menu>

        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button x:Name="RunStopButton" Width="96" Click="RunStopButton_OnClick">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="RunStopIcon" Text="▶" FontSize="16" Margin="0,0,6,0" />
                        <TextBlock x:Name="RunStopText" Text="启动" />
                    </StackPanel>
                </Button>
            </ToolBar>
        </ToolBarTray>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="车轮停转中" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="Wheel Speed" />
            </StatusBarItem>
        </StatusBar>

        <Grid Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="16" BorderBrush="#D0D5DD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="参数设置" FontSize="18" FontWeight="Bold" Margin="0,0,0,12" />

                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="转速 (RPM)" FontWeight="SemiBold" />
                        <controls:NumericUpDown x:Name="RpmControl"
                                                Margin="0,6,0,0"
                                                Minimum="-1200"
                                                Maximum="1200"
                                                DecimalPlaces="1"
                                                Increment="10"
                                                WheelIncrement="10"
                                                ValueChanged="RpmControl_OnValueChanged" />
                    </StackPanel>

                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="辐条数" FontWeight="SemiBold" />
                        <controls:NumericUpDown x:Name="SpokesControl"
                                                Margin="0,6,0,0"
                                                Minimum="1"
                                                Maximum="24"
                                                DecimalPlaces="0"
                                                Increment="1"
                                                WheelIncrement="1"
                                                ValueChanged="SpokesControl_OnValueChanged" />
                    </StackPanel>

                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="刷新频率 (Hz)" FontWeight="SemiBold" />
                        <ComboBox x:Name="FrequencyCombo"
                                  Margin="0,6,0,0"
                                  SelectionChanged="FrequencyCombo_OnSelectionChanged">
                            <ComboBoxItem Content="5" />
                            <ComboBoxItem Content="10" />
                            <ComboBoxItem Content="15" />
                            <ComboBoxItem Content="20" />
                            <ComboBoxItem Content="25" />
                            <ComboBoxItem Content="30" />
                            <ComboBoxItem Content="35" />
                            <ComboBoxItem Content="40" />
                            <ComboBoxItem Content="45" />
                            <ComboBoxItem Content="50" />
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="滚轮调节步长" FontWeight="SemiBold" />
                        <ComboBox x:Name="DeltaCombo"
                                  Margin="0,6,0,0"
                                  SelectionChanged="DeltaCombo_OnSelectionChanged">
                            <ComboBoxItem Content="1" />
                            <ComboBoxItem Content="5" />
                            <ComboBoxItem Content="10" />
                            <ComboBoxItem Content="20" />
                            <ComboBoxItem Content="30" />
                            <ComboBoxItem Content="40" />
                            <ComboBoxItem Content="50" />
                            <ComboBoxItem Content="60" />
                            <ComboBoxItem Content="80" />
                            <ComboBoxItem Content="100" />
                        </ComboBox>
                    </StackPanel>

                    <CheckBox x:Name="MarkerCheckBox"
                              Content="标记一个辐条"
                              Margin="0,0,0,16"
                              Checked="MarkerCheckBox_OnChecked"
                              Unchecked="MarkerCheckBox_OnChecked" />

                    <Border Background="#F0F4FF" CornerRadius="6" Padding="12">
                        <TextBlock Text="提示：点击上方按钮或使用菜单即可启动/停止车轮。"
                                   TextWrapping="Wrap" />
                    </Border>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="White" CornerRadius="12" BorderBrush="#CBD5E1" BorderThickness="1">
                <Grid>
                    <controls:WheelVisualizer x:Name="WheelDisplay"/>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>